unit dlgConfirmationDelete;

interface

uses Winapi.Windows, System.SysUtils, System.Classes, Vcl.Graphics, Vcl.Forms,
  Vcl.Controls, Vcl.StdCtrls, Vcl.Buttons, Vcl.ExtCtrls, Vcl.ButtonStylesAttributes,
  Vcl.StyledButton;

type
  TdlgConfirmDB = class(TForm)
    btnYes: TStyledButton;
    btnNo: TStyledButton;
    procedure btnYesClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  dlgConfirmDB: TdlgConfirmDB;

implementation

{$R *.dfm}

uses dlgProgressBar;

procedure TdlgConfirmDB.btnYesClick(Sender: TObject);
begin
  try
    dlgConfirmDB.Close;
    frmDlgPrgs.Show;
  finally
    dlgConfirmDB.Free;
  end;
end;

end.
